<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="weatherapp.MainPage">

    <StackLayout>
        <Entry x:Name="search_city" Placeholder="Wyszukaj Miasto" />
        <Button x:Name="search_city_button" Clicked="search_city_button_ClickedAsync"/>


        <ListView x:Name="searched_city_list">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding country}" />
                            <Button x:Name="element_button" Text="{Binding name}" Clicked="City_choseAsync"/>

                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>



        <Label x:Name="name" Text=""/>
        <Label x:Name="region"  Text="" />
        <Label x:Name="country"  Text="" />
        <Label x:Name="temp_c"  Text="" />
        <Label x:Name="text" Text="" />
                        
                    
       

    </StackLayout>

</ContentPage>
